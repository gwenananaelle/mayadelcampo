---
import MainLayout from '../layouts/MainLayout.astro';
import Form from '../components/Form.astro';
---

<MainLayout>
	<section class="pt-32 pb-20">
		<div class="container-custom">
			<div class="max-w-2xl mx-auto mb-16">
				<h1 class="text-4xl md:text-5xl font-bold mb-4">Reach Out</h1>
				<div class="prose text-gray-700 mb-6 text-left indent-8">
					<p>
						Did the paintings inspire you? Would you want to order one for you or a loved one?
						Please send me a message, will be happy to hear from you and make your dream come true.
					</p>
				</div>
				<Form />
			</div>
		</div>
	</section>
</MainLayout>
